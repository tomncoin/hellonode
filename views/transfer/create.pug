extends ../layouts/common.pug
block content
    h1 New Transfer

    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/transfer/create", method="POST")
        input(type="hidden", name="_csrf", value= csrftoken)
        .mb-3
            lable.form-label Account 
            input.form-control(type="text", name="account", value= values?values.account:'')
        .mb-3
            lable.form-label Amount 
            input.form-control(type="number", name="amount", value= values?values.amount:'')

        button.btn.btn-primary Transfer 